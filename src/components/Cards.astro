---
// Import the Card component and its props type
import Card from "@/components/Card.astro";
import type { Props as CardProp } from "@/components/Card.astro";

// Define the props type for the Cards component
type Props = {
    cards: CardProp[]; // Array of card objects, each containing data for a news article
};

// Destructure the cards prop from Astro.props
const { cards } = Astro.props;

---

<div class="container mx-auto gap-6 p-6 z-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 ">
    {cards.sort((a, b) => new Date(a.date_published).getTime() - new Date(b.date_published).getTime()).map((card) => <Card {...card} />)
    }
</div>
