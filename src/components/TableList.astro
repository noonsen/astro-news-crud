---
import UpdateButton from "@/components/UpdateModal";
import DeleteButton from "@/components/DeleteButton";

export type TableProps = {
    id: number;
    title: string;
    description: string;
    date_published: string;
    body: string;
    images: string;
};

const { tables }: { tables: TableProps[] } = Astro.props;
---

<div class="flex flex-col justify-center items-center h-screen">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
            <div class="overflow-hidden">
                <table class="table-fixed border border-zinc rounded-lg border-separate border-spacing-y-3 min-w-full text-left text-sm font-light text-surface text-black">
                    <thead class="border-b border-zinc-700 bg-zinc-100 font-medium dark:border-white/10">
                        <tr>
                            <th scope="col" class="px-6 py-4">#</th>
                            <th scope="col" class="px-6 py-4">Image</th>
                            <th scope="col" class="px-6 py-4">Title</th>
                            <th scope="col" class="px-6 py-4">Description</th>
                            <th scope="col" class="px-6 py-4">Published Date</th>
                            <th scope="col" class="px-6 py-4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {tables.map((table) => (
                            <tr key={table.id} class="border-b border-neutral-200 dark:border-white/10">
                                <td class="whitespace-nowrap px-6 py-4 font-medium">{table.id}</td>
                                <td class="whitespace-nowrap px-6 py-4">
                                    <img src={table.images} alt={table.title} class="w-16 h-16 object-cover"/>
                                </td>
                                <td class="whitespace-nowrap px-6 py-4 font-bold">{table.title}</td>
                                <td class="whitespace-nowrap px-6 py-4">{table.description}</td>
                                <td class="whitespace-nowrap px-6 py-4">{new Date(table.date_published).toLocaleDateString()}</td>
                                <td class="whitespace-nowrap px-6 py-4 flex space-x-2 gap-2">
                                    <UpdateButton id={table.id} client:load/>
                                    <DeleteButton id={table.id} client:load/>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
