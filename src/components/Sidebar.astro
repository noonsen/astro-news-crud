---
// Import the CreateButton component
import CreateButton from "@/components/CreateButton.astro";

const props = Astro.props;
---

<aside class="bg-white p-4 shadow-md border-r-2 border-zinc-200 font-semibold h-screen flex flex-col">
  <ul class="text-black flex flex-col space-y-4">
    <li class="flex items-center mb-4 px-4 py-2 hover:bg-gray-200 hover:rounded-lg transition-transform">
      <a href="/" class="flex items-center w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" viewBox="0 0 24 24">
          <path fill="currentColor" d="M5 21q-.825 0-1.412-.587T3 19V5q0-.825.588-1.412T5 3h14q.825 0 1.413.588T21 5v14q0 .825-.587 1.413T19 21zm0-2h6V5H5zm8 0h6v-7h-6zm0-9h6V5h-6z"/>
        </svg>
        Dashboard
      </a>
    </li>
    <li class="flex items-center mb-4 px-4 py-2 hover:bg-gray-200 hover:rounded-lg transition-transform">
      <a href="/register" class="flex items-center w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" viewBox="0 0 24 24">
          <path fill="currentColor" d="M18 11h-2q-.425 0-.712-.288T15 10q0-.425.288-.712T16 9h2V7q0-.425.288-.712T19 6q.425 0 .713.288T20 7v2h2q.425 0 .713.288T23 10q0 .425-.288.713T22 11h-2v2q0 .425-.288.713T19 14q-.425 0-.712-.288T18 13zm-9 1q-1.65 0-2.825-1.175T5 8q0-1.65 1.175-2.825T9 4q1.65 0 2.825 1.175T13 8q0 1.65-1.175 2.825T9 12m-8 6v-.8q0-.85.438-1.562T2.6 14.55q1.55-.775 3.15-1.162T9 13q1.65 0 3.25.388t3.15 1.162q.725.375 1.163 1.088T17 17.2v.8q0 .825-.587 1.413T15 20H3q-.825 0-1.412-.587T1 18m2 0h12v-.8q0-.275-.137-.5t-.363-.35q-1.35-.675-2.725-1.012T9 15q-1.4 0-2.775.338T3.5 16.35q-.225.125-.363.35T3 17.2zm6-8q.825 0 1.413-.587T11 8q0-.825-.587-1.412T9 6q-.825 0-1.412.588T7 8q0 .825.588 1.413T9 10m0 8"/>
        </svg>
        Register
      </a>
    </li>
    <li class="flex items-center mb-4 px-4 py-2 hover:bg-gray-200 hover:rounded-lg transition-transform">
      <form action="/api/auth/signout" class="w-full">
        <button class="flex items-center w-full text-black">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" viewBox="0 0 24 24" {...props}>
            <path fill="currentColor" d="M5 21q-.825 0-1.412-.587T3 19V5q0-.825.588-1.412T5 3h6q.425 0 .713.288T12 4q0 .425-.288.713T11 5H5v14h6q.425 0 .713.288T12 20q0 .425-.288.713T11 21zm12.175-8H10q-.425 0-.712-.288T9 12q0-.425.288-.712T10 11h7.175L15.3 9.125q-.275-.275-.275-.675t.275-.7q.275-.3.7-.313t.725.288L20.3 11.3q.3.3.3.7t-.3.7l-3.575 3.575q-.3.3-.712.288t-.713-.313q-.275-.3-.262-.712t.287-.688z"/>
          </svg>
          Logout
        </button>
      </form>
    </li>
  </ul>
  <hr class="border-t border-gray-300 my-4">
  <div class="mt-auto">
    <CreateButton />
  </div>
</aside>
